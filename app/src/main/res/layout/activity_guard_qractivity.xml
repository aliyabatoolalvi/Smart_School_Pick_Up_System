<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToOutline="true"
    android:background="#5AA9E6"
    tools:context=".GuardQRActivity">
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_keyboard_arrow_right_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:rotation="180"

        android:contentDescription="Back Button"
        android:background="?android:attr/selectableItemBackground"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"
        android:layout_marginVertical="80dp"

        />
    <!-- Auto layout, variables, and unit scale are not yet supported -->
    <!-- Auto layout, variables, and unit scale are not yet supported -->
    <TextView
        android:id="@+id/authenticat"
        android:layout_width="349dp"
        android:layout_height="108dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="64dp"
        android:layout_marginRight="72dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center_horizontal|top"
        android:text="@string/authenticat"
        android:textAppearance="@style/authenticate"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="420dp"
        android:layout_height="320dp"
        app:srcCompat="@drawable/guardpic"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="200dp"
        />
    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="690dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:textAllCaps="false"
        android:text="Open Scanner"
        android:backgroundTint="@color/white"
        android:textColor="@color/background_color"
        app:background="@drawable/button_background"
        android:textStyle="bold" />
    <!--
      Font family: Manrope
      Line height: 44sp
      -->

    <TextView
        android:id="@+id/scan_your_q"
        android:layout_width="wrap_content"
        android:layout_height="98dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="630dp"
        android:layout_marginRight="63dp"
        android:gravity="center_horizontal|top"
        android:text="Scan your QR to proceed"
        android:textAppearance="@style/scan_your_q"
        android:textSize="26dp" />

</RelativeLayout>