        <androidx.cardview.widget.CardView
            android:id="@+id/stucard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/icon_name"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/student"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:contentDescription="Name Icon" />

                <TextView
                    android:id="@+id/nameS"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Student Name"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/icon_name"
                    app:layout_constraintTop_toTopOf="@id/icon_name"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/icon_rollno"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/roll"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/nameS"
                    android:layout_marginTop="16dp"
                    android:contentDescription="Roll No Icon" />

                <TextView
                    android:id="@+id/rollno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Roll No."
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/icon_rollno"
                    app:layout_constraintTop_toTopOf="@id/icon_rollno"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/icon_class"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/jamaat"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/rollno"
                    android:contentDescription="Class Icon" />

                <TextView
                    android:id="@+id/ClassS"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Class"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/icon_class"
                    app:layout_constraintTop_toTopOf="@id/icon_class"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/icon_section"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/hub"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/ClassS"
                    android:contentDescription="Section Icon" />

                <TextView
                    android:id="@+id/sectionS"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Section"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/icon_section"
                    app:layout_constraintTop_toTopOf="@id/icon_section"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
