<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/school1" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="100dp"
            android:text="SignUp"
            android:textColor="@android:color/white"
            android:textSize="50dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/form"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/form_background_light"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- School Name EditText -->
            <EditText
                android:id="@+id/schoolName"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/editbg"
                android:hint="School Name"
                android:inputType="text"
                android:maxLines="1"
                android:maxLength="50"
                android:padding="10dp"
                android:textColorHint="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- School Address EditText -->
            <EditText
                android:id="@+id/schoolAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="65dp"
                android:maxLines="3"
                android:maxLength="100"
                android:scrollbars="vertical"

                android:layout_marginTop="15dp"
                android:background="@drawable/editbg"
                android:hint="School Address"
                android:inputType="textPostalAddress|textMultiLine"
                android:padding="10dp"
                android:textColorHint="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- Email EditText -->
            <EditText
                android:id="@+id/email1"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/editbg"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:maxLength="50"
                android:maxLines="1"

                android:padding="10dp"
                android:textColorHint="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- Password EditText -->
            <EditText
                android:id="@+id/password1"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/editbg"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLength="20"
                android:padding="10dp"
                android:textColorHint="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/loginLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? Login"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <Button
            android:id="@+id/Signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/form"
            android:layout_marginVertical="30dp"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:text="Signup"
            android:textAllCaps="true"
            android:backgroundTint="#0090E9"
            app:background="@drawable/button_blue"
            android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
            android:textStyle="bold"
            android:layout_marginBottom="80dp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
