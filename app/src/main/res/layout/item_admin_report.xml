<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reportCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Student Name -->
        <TextView
            android:id="@+id/studentNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="👤 Student Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />

        <!-- Pickup Timestamp -->
        <TextView
            android:id="@+id/timestampText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🕒 Picked at: May 5, 2025 - 03:19 PM"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="4dp" />

        <!-- Deviation Info -->
        <TextView
            android:id="@+id/deviationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⏳ Pickup Type: QR scan"
            android:textSize="14sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginBottom="4dp" />

        <!-- Picked By -->
        <TextView
            android:id="@+id/pickedByText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🧍 Picked by: Aliya Batool"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />

        <!-- Pickup Method -->
        <TextView
            android:id="@+id/pickupMethodText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📄 Method: Manual CNIC"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />

        <!-- Manual Icon (Optional) -->

        <ImageView
            android:id="@+id/manualIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/warning"
            android:contentDescription="Manual Pickup Icon"
            android:layout_marginTop="8dp"
            android:visibility="gone" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
