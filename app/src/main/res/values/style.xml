<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="authenticate">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#F2F5FF</item>
    </style>
    <style name="scan_your_q">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#000000</item>

    </style>

    <style name="WhiteTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/input_text</item>
        <item name="android:textColorHint">@color/input_hint</item>
        <item name="hintTextColor">@color/input_hint</item>
        <item name="boxStrokeColor">@color/input_stroke</item>
        <item name="endIconTint">@color/input_hint</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxBackgroundColor">@color/form_bg</item>
    </style>

    <style name="AdminGridButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:backgroundTint">@color/menuItem</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30%</item>
    </style>

    <style name="AppTheme.Launcher" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item> <!-- optional image or color -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>








</resources>